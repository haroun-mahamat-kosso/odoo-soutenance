<odoo>
    <record id="view_facture_personnalise_form" model="ir.ui.view">
        <field name="name">facture.personnalise.form</field>
        <field name="model">facture.personnalise</field>
        <field name="arch" type="xml">
            <form string="Facture PersonnalisÃ©e">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="date"/>
                        <field name="amount_total" readonly="1"/>
                        <field name="state"/>
                    </group>
                    <notebook>
                        <page string="Lignes de facture">
                            <field name="invoice_lines">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <!-- Bouton d'impression pour la facture -->
                        <button name="%(formation__sup.action_print_facture)d" string="Imprimer la facture" type="action" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
