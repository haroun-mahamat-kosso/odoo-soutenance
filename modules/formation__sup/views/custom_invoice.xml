<odoo>
    <!-- Vue Formulaire pour Facture Personnalisée -->
    <record id="view_custom_invoice_form" model="ir.ui.view">
        <field name="name">custom.invoice.form</field>
        <field name="model">custom.invoice</field>
        <field name="arch" type="xml">
            <form string="Facture Personnalisée">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="student_id"/>
                        <field name="date_invoice"/>
                        <field name="total_amount" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Lignes de Facture">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="amount" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <!-- Bouton pour télécharger la facture -->
                    <button name="action_download_invoice" type="object" string="Télécharger la Facture" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
