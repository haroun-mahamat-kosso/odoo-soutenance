<odoo>
    <!-- Rapport Facture Personnalisée -->
    <template id="custom_invoice_report" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@class='page']" position="inside">
            <!-- En-tête avec le logo de l'entreprise et ses informations -->
            <div class="header">
                <img src="/web/image/company/1/logo" style="width: 150px;"/>
                <div class="company_details">
                    <strong>Formation-Sup</strong> <br/>
                    BP: 35205, Yaoundé <br/>
                    Cameroun <br/>
                    Email: formationsup@gmail.com
                </div>
            </div>

            <div class="invoice_info">
                <h2>Facture</h2>
                <p><strong>Référence:</strong> <t t-esc="doc.name"/></p>
                <p><strong>Étudiant:</strong> <t t-esc="doc.student_id.name"/></p>
                <p><strong>Date de la Facture:</strong> <t t-esc="doc.date_invoice"/></p>
            </div>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Quantité</th>
                        <th>Prix Unitaire</th>
                        <th>Montant</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="doc.line_ids" t-as="line">
                        <tr>
                            <td><t t-esc="line.product_id.name"/></td>
                            <td><t t-esc="line.quantity"/></td>
                            <td><t t-esc="line.price_unit"/></td>
                            <td><t t-esc="line.amount"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>

            <div class="total_amount">
                <strong>Total: <t t-esc="doc.total_amount"/> FCFA</strong>
            </div>

            <!-- Footer avec informations supplémentaires -->
            <div class="footer">
                <p style="font-size: 10px;">Formation-Sup - BP: 35205, Yaoundé, Cameroun</p>
                <p style="font-size: 10px;">Email: formationsup@gmail.com</p>
            </div>
        </xpath>
    </template>

    <!-- Déclaration du rapport -->
    <report
        id="custom_invoice_report_action"
        model="custom.invoice"
        string="Facture Personnalisée"
        report_type="qweb-pdf"
        name="formation__sup.custom_invoice_report"
        file="formation__sup.custom_invoice_report"
        attachment_use="False"/>
</odoo>
